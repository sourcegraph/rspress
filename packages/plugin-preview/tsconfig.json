{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src",
    "vitest.config.ts",
    "index.d.ts",
    "mdx-meta-loader.cjs",
    "static/"
  ],
  "exclude": ["runtime.d.ts", "theme.d.ts", "node_modules", "dist"]
}
