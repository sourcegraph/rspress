{
  "extends": "@modern-js/tsconfig/base",
  "declaration": true,
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "src",
    "outDir": "./dist",
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules"]
}
