{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": false,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@/theme-default": ["./"]
    }
  },
  "include": ["src"],
  "exclude": ["theme.ts", "node_modules"]
}
