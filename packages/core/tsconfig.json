{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "strict": false,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": "src",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@theme": ["./theme-default"],
      "@/theme-default/*": ["./theme-default/*"]
    }
  },
  "include": ["src"],
  "exclude": ["runtime.ts", "theme.ts", "node_modules"]
}
